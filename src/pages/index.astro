---
import Layout from '../layouts/Layout.astro';
import LandingHeader from '../components/LandingHeader.astro';
import HeroSection from '../components/HeroSection.astro';
import Section1 from '../components/Section1.astro';
import Section2 from '../components/Section2.astro';
import Section3 from '../components/Section3.astro';
---

<Layout title="Tesla fake">
	<LandingHeader />
	<main class="snap-y snap-mandatory relative w-full h-screen overflow-auto">
		<div class="snap-center">
			<HeroSection />
		</div>
		<div class="snap-center">
			<Section1 />
		</div>
		<div class="snap-center">
			<Section2 />
		</div>
		<div class="snap-center">
			<Section3 />
		</div>
		
	</main>
</Layout>